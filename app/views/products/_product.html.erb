<tr>
  <td><%= product.name %></td>
  <td><%= product.category.name %></td>
  <td><%= product.discontinued ? "Yes" : "No" %></td>
  <td class="price"><%= number_to_currency product.price %></td>
  <td><%= link_to 'Edit', edit_product_path(product) %></td>
  <td><%= link_to 'Destroy', product, method: :delete %></td>
</tr>
